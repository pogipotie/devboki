{
  "name": "boki-kiosk-mobile",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:kiosk": "vite --config vite.config.kiosk.ts",
    "build": "tsc -b && vite build",
    "build:kiosk": "vite build --config vite.config.kiosk.ts",
    "preview": "vite preview",
    "cap:init": "capacitor init",
    "cap:sync": "capacitor sync",
    "cap:add:android": "capacitor add android",
    "cap:add:ios": "capacitor add ios",
    "cap:run:android": "capacitor run android",
    "cap:run:ios": "capacitor run ios",
    "cap:build:android": "npm run build:kiosk && capacitor sync android && capacitor build android",
    "cap:build:ios": "npm run build:kiosk && capacitor sync ios && capacitor build ios",
    "lint": "eslint .",
    "debug-order": "node debug-order-issue.js"
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/browser": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/filesystem": "^6.0.3",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/share": "^6.0.3",
    "@supabase/supabase-js": "^2.39.3",
    "dotenv": "^17.2.3",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^16.2.1",
    "react-router-dom": "^6.28.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "@eslint/js": "^9.13.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitejs/plugin-react-swc": "^4.2.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.10.0",
    "unplugin-auto-import": "^20.2.0",
    "vite": "^6.0.1"
  }
}
